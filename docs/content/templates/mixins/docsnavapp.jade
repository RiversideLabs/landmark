mixin docsnavapp(docssectionapp)
	.visible-xs: ul.nav-toggle
		each item in docsnavapp
			li(class=docssectionapp.value == item.value ? 'active' : null)
				a(href=item.path).nav-heading= item.labelsm
		
	nav.docs-sidebar.hidden-xs
		ul.sidebar-nav
			li(class=docssectionapp.value == 'introduction' ? 'active' : null)
				a(href='/docs').nav-heading Welcome
			each item in docsnavapp
				li(class=docssectionapp.value == item.value ? 'active' : null)
					a(href=item.path).nav-heading= item.label
		if docssectionapp.value != 'introduction'
			hr
			ul.sidebar-nav
				each item in docsnavapp
					if (item.value == docssectionapp.value ) && item.value == 'getting-started'
						ul
							li.nav-label: a(href='#introduction') Introduction
							li: a(href='#introduction-prerequisites') Prerequisites
							
							li.nav-label: a(href='#gettingstarted') Getting Started
							li: a(href='#gettingstarted-usingyeoman') Using the Yeoman Generator
							li: a(href='#gettingstarted-projectstructure') Project Structure
							
							li.nav-label: a(href='#routesviews') Routes &amp; Views
							li: a(href='#routesviews-settingup') Setting up your Routes and Middleware
							li: a(href='#routesviews-templates') Templates
							li: a(href='#routesviews-publicassets') Public Assets
							
							li.nav-label: a(href='#testingyourapp') Testing your App
							li: a(href='#testingyourapp-desktoptesting') Desktop browser testing
							li: a(href='#testingyourapp-simulatortesting') Simulator testing
							li: a(href='#testingyourapp-mobilebrowsertesting') Mobile browser testing
							li: a(href='#testingyourapp-nativetesting') Testing as a native app
							
							li.nav-label: a(href='#publishing') Publishing
							li: a(href='#publishing-plugins') Cordova Plugins
							li: a(href='#publishing-platformguides') Platform Guides
							
					if (item.value == docssectionapp.value ) && item.value == 'configuration'
						ul
							li.nav-label Coming Soon
